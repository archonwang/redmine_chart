<%= javascript_include_tag 'highcharts.js', :plugin => 'redmine_chart' %>
<h2>RedmineChartController#index</h2>
<%= @name %>
<br>
<h3><%= @crnt_uname %>さんのチケット</h3
<p>
<table border=1 align="center">
<% @status_list_cnt.each do |id,cnt| -%>
<td><%=id%></td><td><%=cnt%></td><tr>
<% end -%>
<th>total</th ><th><%= @assigned  %></th>
</table>

<div id=“container” style=“width: 100%; height: 400px”>
